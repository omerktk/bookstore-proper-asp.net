@model myshop.faq

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminlayout1.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>FAQs</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.faqid)

    <div class="form-group">
        Questions
        <div class="col-md-10">
            @Html.EditorFor(model => model.faqq, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.faqq, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Answers
        <div class="col-md-10">
            @Html.EditorFor(model => model.faqa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.faqa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
