@model myshop.tblorderdetail

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_adminlayout1.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Product Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblpro.pname)
        </dd>
        <dt>
            Product Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pprice)
        </dd>

        <dt>
            Product Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pqyt)
        </dd>

        <dt>
            Total Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pamount)
        </dd>

        <dt>
            Account Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblcust.customername)
        </dd>

        <dt>
            Full Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblorder.opname)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Dashboard", "admin")
        </div>
    }
</div>
