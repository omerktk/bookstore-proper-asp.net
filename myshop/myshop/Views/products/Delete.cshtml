@model myshop.tblpro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_adminlayout1.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Product?</h3>
<div>
    <h4>
        Product Info
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Product Name

        </dt>

        <dd>
            @Html.DisplayFor(model => model.pname)
        </dd>

        <dt>
            Product Price

        </dt>

        <dd>
            @Html.DisplayFor(model => model.pprice)
        </dd>

        <dt>
            Product Details

        </dt>

        <dd>
            @Html.DisplayFor(model => model.pdetails)
        </dd>

        <dt>
            Product Category

        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblcat.cname)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
