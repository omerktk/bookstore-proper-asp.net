@model myshop.feed

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminlayout1.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>
            Feedbacks
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.feedid)

    <div class="form-group">
        Questions
        <div class="col-md-10">
            @Html.EditorFor(model => model.feedq, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.feedq, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            Answers
            <div class="col-md-10">
                @Html.EditorFor(model => model.feeda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.feeda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
